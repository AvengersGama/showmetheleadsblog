<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>PagueWay: o seu blog sobre soluções de pagamento</title>

    <link href="Content/bootstrap.min.css" rel="stylesheet">
    <link href="Content/styles.min.css" rel="stylesheet">
</head>
<body>

    <nav id="top-nav-container">
    </nav>

    <header id="main-header-container">
        <div id="main-header" class="section-content">
            <div class="vertical-align-container">
                <div class="vertical-align">
                    <div id="main-header-content">
                        <span id="main-header-pagueway">PagueWay</span>
                        <h1 id="main-header-pagueway-subtitle">O seu blog sobre soluções em pagamento</h1>
                        <a id="main-header-pagueway-ebook-button" href="@Url.Action("Create", "BlogLeads")"  target="_blank">Baixar e-book gratuito</a>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <section id="main-section-container">
        <div id="main-section" class="section-content">
            <div class="row">
                <div id="content" class="col-sm-9">
                    @RenderBody()
                </div>

                <aside id="side-bar" class="col-sm-3">
                    @Html.Partial("sidebar")
                </aside>

            </div>
        </div>
    </section>
    <footer id="main-footer-container">
        <div id="main-footer" class="section-content">
            <p>© @DateTime.Now.Year PagueWay</p>
        </div>
    </footer>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="Scripts/bootstrap.min.js"></script>
    <script src="Scripts/scripts.min.js"></script>
</body>
</html>